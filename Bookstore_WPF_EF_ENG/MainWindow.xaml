<Window x:Class="Bookstore_WPF_EF_ENG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore_WPF_EF_ENG"
        xmlns:UI="clr-namespace:Bookstore_WPF_EF_ENG.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type= UI:MainWindowViewModel, IsDesignTimeCreatable=True}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <ComboBox Width="200"
                      Margin="10"
                      VerticalAlignment="Center" 
                      ItemsSource="{Binding Stores }"
                      SelectedItem="{Binding SelectedStore}"
                      
                      />
                      
        </StackPanel>
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Inventories}"
                  SelectedItem="{Binding SelectedInventory}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN"
                                    Binding="{Binding Isbn13}" />
                <DataGridTextColumn Header="Title"
                                    Binding="{Binding Isbn13Navigation.Title}" />
                <DataGridTextColumn Header="Quantity" 
                                    Binding="{Binding Quantity}" />
                
            </DataGrid.Columns>    
            
        </DataGrid>
    </Grid>
</Window>

    
    
    
    